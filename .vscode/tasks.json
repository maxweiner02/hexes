{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "mkdir",
      "type": "shell",
      "command": "mkdir -p build",
      "windows": {
        "command": "cmd",
        "args": [
          "/C",
          "if not exist .\\build mkdir .\\build"
        ]
      }
    },
    {
      "label": "build",
      "type": "shell",
      "command": "odin build src -debug -out:build/debug",
      "windows": {
        "command": "odin build src -debug -out:build/debug.exe"
      },
      "group": "build"
    },
    {
      "label": "Build",
      "dependsOn": [
        "mkdir",
        "build"
      ],
      "problemMatcher": []
    }
  ]
}